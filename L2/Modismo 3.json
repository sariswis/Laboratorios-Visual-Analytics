{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": {
    "text": "Calificaciones de películas por Género",
    "fontSize": 18,
    "offset": 15
  },
  "description": "Modismo 3: Swarm plot",
  "data": {
    "url": "https://raw.githubusercontent.com/sariswis/Laboratorios-Visual-Analytics/refs/heads/main/L2/cleaned_movies.json"
  },
  "params": [
    {
      "name": "ratingChoice",
      "value": "IMDB Rating",
      "bind": {
        "input": "radio",
        "options": ["IMDB Rating", "Rotten Tomatoes Rating"],
        "labels": ["IMDb", "Rotten Tomatoes (%)"],
        "name": "Calificación:"
      }
    },
    {
      "name": "brush",
      "select": {
        "type": "interval"
      }
    }
  ],
  "transform": [
    {
      "calculate": "random() * 0.3 - 0.2",
      "as": "jitter"
    },
    {
      "calculate": "ratingChoice == 'IMDB Rating' ? datum['IMDB Rating'] : datum['Rotten Tomatoes Rating']",
      "as": "selectedRating"
    }
  ],
  "mark": {
    "type": "point",
    "filled": true,
    "size": 70
  },
  "encoding": {
    "y": {
      "field": "Major Genre",
      "type": "nominal",
      "title": "Género",
      "sort": "-x"
    },
    "x": {
      "field": "selectedRating",
      "type": "quantitative",
      "title": "Calificación",
      "axis": {"grid": true}
    },
    "color": {
      "condition": {
        "param": "brush",
        "field": "Major Genre",
        "title": "Género",
        "type": "nominal",
        "scale": {
          "scheme": "paired"
        }
      },
      "value": "lightgray"
    },
    "opacity": {
      "condition": {
        "param": "brush",
        "value": 0.7
      },
      "value": 0.3
    },
    "tooltip": [
      {"field": "Title", "type": "nominal", "title": "Película"},
      {"field": "Release Date", "type": "temporal", "title": "Año de estreno", "timeUnit": "year"},
      {"field": "selectedRating", "type": "quantitative", "title": "Calificación"}
    ],
    "yOffset": {
      "field": "jitter",
      "type": "quantitative"
    }
  },
  "width": 600,
  "height": 600,
  "config": {
    "axis": {
        "labelFontSize": 12, 
        "titleFontSize": 14
    },
    "legend": {
        "labelFontSize": 12, 
        "titleFontSize": 13
    }
  }
}